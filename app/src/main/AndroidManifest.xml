<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- أذونات -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" tools:targetApi="34" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" tools:targetApi="33" />

    <!-- إزالة أي أذونات إعلانات قد تُسحب ترانزيتيفيًا -->
    <uses-permission android:name="com.google.android.gms.permission.AD_ID" tools:node="remove" />
    <uses-permission android:name="android.permission.ACCESS_ADSERVICES_AD_ID" tools:node="remove" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuranKarim"
        android:localeConfig="@xml/locales_config"
        tools:targetApi="33">

        <!-- خدمة تشغيل التلاوة في المقدمة -->
        <service
            android:name=".helpers.AudioForegroundService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <!-- مستقبل أوامر الإشعار (Play/Pause/Stop) -->
        <receiver
            android:name=".helpers.AudioControlReceiver"
            android:exported="false" />

        <!-- الشاشة الرئيسية -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.QuranKarim">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- اختيار اللغة (اختياري) -->
        <activity
            android:name=".onboarding.LanguageSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.Light.NoActionBar" />

        <!-- صفحة المصحف: استخدم ثيم الأشرطة الشفافة -->
        <activity
            android:name=".QuranPageActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.QuranKarim.TransparentBars" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- البحث -->
        <activity
            android:name=".search.SearchActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- خدمة تنزيل صفحات المصحف -->
        <service
            android:name=".download.PagesDownloadService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- إعدادات اللغات لـ AppCompat -->
        <meta-data
            android:name="androidx.appcompat.app.locale_config"
            android:resource="@xml/locales_config" />

        <!-- عطّل جمع معرّف الإعلانات إن وُجد -->
        <meta-data
            android:name="google_analytics_adid_collection_enabled"
            android:value="false" />
    </application>
</manifest>
