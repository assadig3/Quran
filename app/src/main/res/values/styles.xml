<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ========== تنسيقات لقائمة الثلاث نقاط (Overflow) ========== -->
    <style name="OverflowMenuTextWhite" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyOverflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:itemTextAppearance">@style/OverflowMenuTextWhite</item>
    </style>

    <style name="MyPopupMenuTextWhite" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- ========== Theme Overlay للقوائم المنبثقة (Popup/Overflow) بنص أبيض ========== -->
    <style name="ThemeOverlay.Quran.Popup.Dark" parent="ThemeOverlay.MaterialComponents">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorOnSurface">@android:color/white</item>
        <!-- إجبار مظهر نص عناصر القائمة إن لزم -->
        <item name="android:itemTextAppearance">@style/OverflowMenuTextWhite</item>
    </style>

    <!-- ========== Overlay خاص بحوارات الماتيريال (M2) ========== -->
    <style name="ThemeOverlay.Quran.Dialog"
        parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog" />

    <!-- ========== الثيم الرئيسي للتطبيق ========== -->
    <style name="Theme.QuranKarim" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- ألوان أساسية (تأكد أن هذه الألوان موجودة في colors.xml) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- نصوص عامة -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <!-- خلفية النافذة (تزيل شاشة زرقاء عابرة) -->
        <item name="android:windowBackground">@color/appBackground</item>

        <!-- جعل أشرطة النظام شفافة (يجب استخدام android:) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- ربط قائمة الثلاث نقاط القديمة -->
        <item name="popupMenuStyle">@style/MyOverflowMenuStyle</item>

        <!-- اجعل التولبار يستخدم PopupTheme الداكن -->
        <item name="toolbarStyle">@style/Widget.Quran.Toolbar</item>

        <!-- شاشة Splash (أندرويد 12+) -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/appBackground</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">@drawable/icon</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="31">@android:color/transparent</item>

        <!-- بطاقة افتراضية -->
        <item name="cardViewStyle">@style/CardViewStyle</item>
    </style>

    <!-- ثيم فرعي لصفحة المصحف مع أشرطة شفافة -->
    <style name="Theme.QuranKarim.TransparentBars" parent="Theme.QuranKarim">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Toolbar يطبّق PopupTheme الداكن للقائمة -->
    <style name="Widget.Quran.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.Quran.Popup.Dark</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="navigationIconTint">@android:color/white</item>
    </style>

    <!-- بطاقات -->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">3dp</item>
    </style>

    <!-- حوارات كلاسيكية (اختياري) -->
    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#FFFFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- تبويبات وعناوين -->
    <style name="TabTextAppearance" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tabTextDefault</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/amiri_regular</item>
    </style>

    <style name="ToolbarTitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
