<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- خلفية بيضاء شفافة قليلاً -->
    <solid android:color="#CCFFFFFF"/> <!-- أبيض مع شفافية 80% -->

    <!-- زوايا دائرية -->
    <corners android:radius="12dp"/>

    <!-- حدود رفيعة -->
    <stroke
        android:width="1dp"
        android:color="#33000000"/> <!-- أسود خفيف شفاف -->

    <!-- ظل داخلي بسيط -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
